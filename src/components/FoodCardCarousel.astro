---
import FoodCard from './ui/FoodCard.astro';

interface Props {
  title?: string;
  subtitle?: string;
  class?: string;
}

const {
  title = "Calientitas del momento",
  subtitle = "Encuentra las mejores ofertas para tus comidas grupales en minutos y sin complicaciones.",
  class: className = '',
} = Astro.props;

// Sample food data
const foodItems = [
  {
    title: "Pachamanca criolla",
    image: "/images/card-foods/pachamanca.png",
    rating: 4.5,
    normalPrice: 162.00,
    enManchaPrice: 144.00,
    discount: 18.00,
    badgeText: "Lince",
    splitPrice: 16.00
  },
  {
    title: "Lomo saltado",
    image: "/images/card-foods/lomoSaltado.jpg",
    rating: 4.5,
    normalPrice: 162.00,
    enManchaPrice: 144.00,
    discount: 18.00,
    badgeText: "Centro",
    splitPrice: 16.00
  },
  {
    title: "Aj√≠ de gallina gourmet",
    image: "/images/card-foods/ajiGallina.jpg",
    rating: 4.5,
    normalPrice: 162.00,
    enManchaPrice: 144.00,
    discount: 18.00,
    badgeText: "Chorrillos",
    splitPrice: 16.00
  },
  {
    title: "Maquis parrilleros",
    image: "/images/card-foods/maquis.jpg",
    rating: 4.5,
    normalPrice: 162.00,
    enManchaPrice: 144.00,
    discount: 18.00, 
    badgeText: "Magdalena",
    splitPrice: 16.00
  }
];
---

<section class={`flex px-4 md:px-16 lg:px-64 py-16 flex-col items-center gap-20 self-stretch ${className}`}>
  <div class="w-full max-w-[1280px]">
    <h2 class="font-heading text-2xl md:text-3xl text-neutral-darkest mb-4">{title}</h2>
    {subtitle && <p class="text-neutral-dark max-w-2xl mb-8">{subtitle}</p>}
    
    <!-- Scrollable container for cards on mobile -->
    <div class="flex items-start gap-6 self-stretch overflow-x-auto pb-6 snap-x snap-mandatory -mx-4 px-4 scrollbar-hide">
      {foodItems.map(item => (
        <div class="snap-start flex-shrink-0">
          <FoodCard
            title={item.title}
            image={item.image}
            rating={item.rating}
            normalPrice={item.normalPrice}
            enManchaPrice={item.enManchaPrice}
            discount={item.discount}
            badgeText={item.badgeText}
            splitPrice={item.splitPrice}
          />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Ocultar la barra de desplazamiento manteniendo la funcionalidad */
  .scrollbar-hide::-webkit-scrollbar {
    display: none; /* Para Chrome, Safari y Opera */
  }
  
  .scrollbar-hide {
    -ms-overflow-style: none;  /* Para Internet Explorer y Edge */
    scrollbar-width: none;  /* Para Firefox */
  }
</style> 