---
interface Props {
  name: 'search' | 'cube' | 'credit-card' | 'question' | 'calendar' | 'clock' | 'user' | 'check' | 'circle';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  name,
  size = 'md',
  class: className = '',
} = Astro.props;

// Size mappings
const sizeClass = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5',
  lg: 'w-6 h-6'
}[size];

// Final classes
const classes = [sizeClass, className].join(' ');

// Icons mapping
