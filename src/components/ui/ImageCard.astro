---
interface Props {
  title: string;
  description: string;
  image: string;
  class?: string;
}

const {
  title,
  description,
  image,
  class: className = '',
} = Astro.props;
---

<div class={`flex flex-col rounded-2xl border-2 border-[rgba(13,10,0,0.15)] overflow-hidden ${className}`}>
  <!-- Imagen -->
  <div class="w-full h-[240px] overflow-hidden">
    <img src={image} alt={title} class="w-full h-full object-cover">
  </div>
  
  <!-- Contenido de texto con gap de 32px desde la imagen -->
  <div class="flex flex-col items-start gap-32 flex-1 p-6">
    <!-- Textos con gap de 24px entre ellos -->
    <div class="flex flex-col items-start gap-6 self-stretch">
      <h3 class="font-heading text-2xl text-neutral-darkest">{title}</h3>
      <p class="text-neutral-dark">{description}</p>
    </div>
  </div>
</div> 